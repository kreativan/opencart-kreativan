<nav class="uk-navbar uk-navbar-container uk-navbar-transparent" uk-navbar>

  <div class="uk-navbar-left">

    <div class="uk-margin-right">
      <a href="#offcanvas-nav" uk-toggle class="uk-link-reset">
        <span class="uk-text-emphasis" uk-icon="icon: menu; ratio: 1.3"></span>
      </a>
    </div>

    <div id="logo">
      {% if logo %}
      <a href="{{ home }}" class="uk-logo">
        <img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" />
      </a>
      {% else %}
      <a class="uk-logo uk-h4 uk-text-uppercase uk-margin-remove" href="{{ home }}">{{ name }}</a>
      {% endif %}
    </div>

  </div>

  <div class="uk-navbar-center">
    <div>{{ search }}</div>
  </div>

  <div class="uk-navbar-right">

    <ul class="uk-navbar-nav">

        <li>
          <a href="{{ wishlist }}" title="{{ text_wishlist }}" class="uk-position-relative">
            <span id="wishlist-total" class="uk-badge uk-position-absolute{% if wishlist_count < 1 %} uk-hidden{% endif %}" style="top:17px; right: 0px;">
              {{ wishlist_count }}
            </span>
            <span uk-icon="icon: heart"></span>
          </a>
        </li>

      <li>
        <a href="{{ compare_url }}" title="{{ text_compare }}" class="uk-position-relative">
          <span id="compare-total" class="uk-badge uk-position-absolute{% if compare_count < 1 %} uk-hidden{% endif %}" style="top:17px; right: 0px;">
            {{ compare_count }}
          </span>
          <span uk-icon="icon: copy"></span>
        </a>
      </li>

      {% if logged %}
      <li>
        <a href="#"><span uk-icon="icon: user"></span></a>
        <div class="uk-navbar-dropdown">
          <ul class="uk-nav uk-navbar-dropdown-nav">
            <li><a href="{{ account }}">{{ text_account }}</a></li>
            <li><a href="{{ order }}">{{ text_order }}</a></li>
            <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
            <li><a href="{{ download }}">{{ text_download }}</a></li>
            <li><a href="{{ logout }}">{{ text_logout }}</a></li>
          </ul>
        </div>
      </li>
      {% else %}
      <li>
        <a href="{{ login }}" title="{{ text_login }}">
          <span uk-icon="icon: user"></span>
        </a>
      </li>
      {% endif %}

      <li>
        <a href="#offcanvas-cart" uk-toggle title="{{ text_cart }}">
      <span id="cart-total" class="uk-badge uk-position-absolute{% if cart_count < 1 %} uk-hidden{% endif %}" style="top:17px; right: 0px;">
            {{ cart_count }}
          </span>
          <span uk-icon="icon: cart"></span>
        </a>
      </li>

    </ul>

  </div>

</nav>
