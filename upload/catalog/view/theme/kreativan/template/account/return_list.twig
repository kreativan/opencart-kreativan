{{ header }}

<div id="breadcrumb">
  <div class="uk-container">
    <ul class="uk-breadcrumb uk-margin-remove">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>

<div id="main" class="uk-section">
<div class="uk-container">

  {{ content_top }}

  {% if column_left or column_right %}<div class="uk-grid" uk-grid>{% endif %}

  {% if column_left %}
  <div class="uk-width-auto@m">
    {{ column_left }}
  </div>
  {% endif %}

  {% if column_left or column_right %}<div class="uk-width-expand@m">{% endif %}

    <div id="content">
      <h1>{{ heading_title }}</h1>
      {% if returns %}
      <div class="uk-overflow-hidden">
        <table class="uk-table uk-table-striped uk-table-small uk-table-middle">
          <thead>
            <tr>
              <th>{{ column_return_id }}</th>
              <th class="uk-text-left">{{ column_status }}</th>
              <th class="uk-text-left">{{ column_date_added }}</th>
              <th class="uk-text-center">{{ column_order_id }}</th>
              <th class="uk-text-left">{{ column_customer }}</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          
          {% for return in returns %}
          <tr>
            <td>#{{ return.return_id }}</td>
            <td class="uk-text-left">{{ return.status }}</td>
            <td class="uk-text-left">{{ return.date_added }}</td>
            <td class="uk-text-center">{{ return.order_id }}</td>
            <td class="uk-text-left">{{ return.name }}</td>
            <td class="uk-text-right">
              <a href="{{ return.href }}" title="{{ button_view }}" class="uk-icon-button uk-icon uk-text-primary" uk-icon="info"></a>
            </td>
          </tr>
          {% endfor %}
            </tbody>
          
        </table>
      </div>
      <div class="uk-flex uk-flex-between">
        <div>{{ pagination }}</div>
        <div class="uk-text-small uk-text-muted">{{ results }}</div>
      </div>
      {% else %}
      <p class="empty-mesage">{{ text_empty }}</p>
      {% endif %}
      <div class="uk-text-right uk-margin-top">
        <a href="{{ continue }}" class="uk-button uk-button-primary">{{ button_continue }}</a>
      </div>
    </div>

  {% if column_left or column_right %}</div>{% endif %}

  {% if column_right %}
  <div class="uk-width-auto@m">
    {{ column_right }}
  </div>
  {% endif %}

  <!-- grid end -->
  {% if column_left or column_right %}</div>{% endif %}

  {{ content_bottom }}

</div>
</div>
{{ footer }} 