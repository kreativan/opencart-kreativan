{{ header }}

<div id="breadcrumb">
  <div class="uk-container">
    <ul class="uk-breadcrumb uk-margin-remove">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>

<div id="main" class="uk-section" uk-height-viewport="expand: true">
<div class="uk-container">

  {{ content_top }}

  {% if column_left or column_right %}<div class="uk-grid" uk-grid>{% endif %}

  {% if column_left %}
  <div class="uk-width-auto@m">
    {{ column_left }}
  </div>
  {% endif %}

  {% if column_left or column_right %}<div class="uk-width-expand@m">{% endif %}

    <div id="content">

      <h1>{{ heading_title }}</h1>

      {% if recurrings %}
      <div class="uk-overflow-auto">
        <table class="uk-table uk-table-divider uk-table-small uk-table-middle">
          <thead>
            <tr>
              <th class="uk-text-right">{{ column_order_recurring_id }}</th>
              <th class="uk-text-left">{{ column_product }}</th>
              <th class="uk-text-left">{{ column_status }}</th>
              <th class="uk-text-left">{{ column_date_added }}</th>
              <th class="uk-text-right"></th>
            </tr>
          </thead>
          <tbody>
          
          {% for recurring in recurrings %}
          <tr>
            <td class="uk-text-right">#{{ recurring.order_recurring_id }}</td>
            <td class="uk-text-left">{{ recurring.product }}</td>
            <td class="uk-text-left">{{ recurring.status }}</td>
            <td class="uk-text-left">{{ recurring.date_added }}</td>
            <td class="uk-text-right">
              <a href="{{ recurring.view }}" title="{{ button_view }}" class="uk-icon-button uk-icon uk-text-primary" uk-icon="info"></a>
            </td>
          </tr>
          {% endfor %}
          
          </tbody>
        </table>
      </div>
      <div class="uk-margin-top">
        {{ pagination }}
      </div>
      {% else %}
      <p class="empty-mesage">{{ text_empty }}</p>
      {% endif %}
    </div>

  {% if column_left or column_right %}</div>{% endif %}

  {% if column_right %}
  <div class="uk-width-auto@m">
    {{ column_right }}
  </div>
  {% endif %}

  <!-- grid end -->
  {% if column_left or column_right %}</div>{% endif %}

  {{ content_bottom }}

</div>
</div>
{{ footer }}