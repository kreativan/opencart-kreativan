{{ header }}

<div id="breadcrumb">
  <div class="uk-container">
    <ul class="uk-breadcrumb uk-margin-remove">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>

{% if error_warning %}
  <div class="uk-alert uk-alert-warning uk-margin-remove">
    <div class="uk-container">
      <span uk-icon="icon: warning"></span>
      {{ error_warning }}
    </div>
  </div>
{% endif %}

<div id="main" class="uk-section">
<div class="uk-container">

  {{ content_top }}

  {% if column_left or column_right %}<div class="uk-grid" uk-grid>{% endif %}

  {% if column_left %}
  <div class="uk-width-auto@m">
    {{ column_left }}
  </div>
  {% endif %}

  {% if column_left or column_right %}<div class="uk-width-expand@m">{% endif %}

    <div id="content">
      <h1>{{ heading_title }}</h1>
      <p>{{ text_description }}</p>
      <form action="{{ action }}" method="post" enctype="multipart/form-data" class="uk-form-horizontal">
        <div class="tm-panel uk-padding">
          <h3>{{ text_order }}</h3>
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label" for="input-firstname">{{ entry_firstname }}</label>
            <div class="uk-form-controls">
              <input type="text" name="firstname" value="{{ firstname }}" placeholder="{{ entry_firstname }}" id="input-firstname" class="form-control uk-input" />
              {% if error_firstname %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_firstname }}</div>
              {% endif %} </div>
          </div>
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label" for="input-lastname">{{ entry_lastname }}</label>
            <div class="uk-form-controls">
              <input type="text" name="lastname" value="{{ lastname }}" placeholder="{{ entry_lastname }}" id="input-lastname" class="form-control uk-input" />
              {% if error_lastname %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_lastname }}</div>
              {% endif %} </div>
          </div>
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label" for="input-email">{{ entry_email }}</label>
            <div class="uk-form-controls">
              <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control uk-input" />
              {% if error_email %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_email }}</div>
              {% endif %} </div>
          </div>
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label" for="input-telephone">{{ entry_telephone }}</label>
            <div class="uk-form-controls">
              <input type="text" name="telephone" value="{{ telephone }}" placeholder="{{ entry_telephone }}" id="input-telephone" class="form-control uk-input" />
              {% if error_telephone %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_telephone }}</div>
              {% endif %} </div>
          </div>
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label" for="input-order-id">{{ entry_order_id }}</label>
            <div class="uk-form-controls">
              <input type="text" name="order_id" value="{{ order_id }}" placeholder="{{ entry_order_id }}" id="input-order-id" class="form-control uk-input" />
              {% if error_order_id %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_order_id }}</div>
              {% endif %} </div>
          </div>
          <div class="form-group uk-margin">
            <label class="uk-form-label control-label" for="input-date-ordered">{{ entry_date_ordered }}</label>
            <div class="uk-form-controls">
              <div class="input-group date uk-position-relative">
                <input type="text" name="date_ordered" value="{{ date_ordered }}" placeholder="{{ entry_date_ordered }}" data-date-format="Y-m-d" id="input-date-ordered" class="form-control uk-input datePicker" />
                <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: calendar"></span>
              </div>
            </div>
          </div>
        </div>
        <div class="tm-panel uk-padding uk-margin">
          <h3>{{ text_product }}</h3>
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label" for="input-product">{{ entry_product }}</label>
            <div class="uk-form-controls">
              <input type="text" name="product" value="{{ product }}" placeholder="{{ entry_product }}" id="input-product" class="form-control uk-input" />
              <input type="hidden" name="product_id" value="{{ product_id }}" />
              {% if error_product %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_product }}</div>
              {% endif %} </div>
          </div>
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label" for="input-model">{{ entry_model }}</label>
            <div class="uk-form-controls">
              <input type="text" name="model" value="{{ model }}" placeholder="{{ entry_model }}" id="input-model" class="form-control uk-input" />
              {% if error_model %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_model }}</div>
              {% endif %} </div>
          </div>
          <div class="form-group uk-margin">
            <label class="uk-form-label control-label" for="input-quantity">{{ entry_quantity }}</label>
            <div class="uk-form-controls">
              <input type="text" name="quantity" value="{{ quantity }}" placeholder="{{ entry_quantity }}" id="input-quantity" class="form-control uk-input" />
            </div>
          </div>
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label">{{ entry_reason }}</label>
            <div class="uk-form-controls"> {% for return_reason in return_reasons %}
              {% if return_reason.return_reason_id == return_reason_id %}
              <div class="radio">
                <label>
                  <input type="radio" class="uk-radio" name="return_reason_id" value="{{ return_reason.return_reason_id }}" checked="checked" />
                  {{ return_reason.name }}</label>
              </div>
              {% else %}
              <div class="radio">
                <label>
                  <input type="radio" class="uk-radio" name="return_reason_id" value="{{ return_reason.return_reason_id }}" />
                  {{ return_reason.name }}</label>
              </div>
              {% endif %}
              {% endfor %}
              {% if error_reason %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_reason }}</div>
              {% endif %} </div>
          </div>
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label">{{ entry_opened }}</label>
            <div class="uk-form-controls">
              <label class="radio-inline uk-margin-small-right"> {% if opened %}
                <input type="radio" class="uk-radio" name="opened" value="1" checked="checked" />
                {% else %}
                <input type="radio" class="uk-radio" name="opened" value="1" />
                {% endif %}
                {{ text_yes }}</label>
              <label class="radio-inline uk-margin-small-right"> {% if not opened %}
                <input type="radio" class="uk-radio" name="opened" value="0" checked="checked" />
                {% else %}
                <input type="radio" class="uk-radio" name="opened" value="0" />
                {% endif %}
                {{ text_no }}</label>
            </div>
          </div>
          <div class="form-group uk-margin">
            <label class="uk-form-label control-label" for="input-comment">{{ entry_fault_detail }}</label>
            <div class="uk-form-controls">
              <textarea name="comment" rows="5" placeholder="{{ entry_fault_detail }}" id="input-comment" class="form-control uk-textarea">{{ comment }}</textarea>
            </div>
          </div>
        </div>
        
        {% if captcha %}
        <div class="tm-panel uk-padding">
          {{ captcha }}
        </div>
        {% endif %}

        {% if text_agree %}
        <div class="uk-margin uk-text-right">
          {{ text_agree }}
          {% if agree %}
          <input type="checkbox" class="uk-checkbox" name="agree" value="1" checked="checked" />
          {% else %}
          <input type="checkbox" class="uk-checkbox" name="agree" value="1" />
          {% endif %}
        </div>
        <div class="buttons clearfix uk-flex uk-flex-between">
          <div class="pull-left">
            <a href="{{ back }}" class="uk-button uk-button-default">
              <span uk-icon="icon: arrow-left"></span>
              {{ button_back }}
            </a>
          </div>
          <div>
            <input type="submit" value="{{ button_submit }}" class="uk-button uk-button-primary" />
          </div>
        </div>
        {% else %}
        <div class="buttons clearfix uk-flex uk-flex-between uk-margin-top">
          <div class="pull-left">
            <a href="{{ back }}" class="uk-button uk-button-default">
              <span uk-icon="icon: arrow-left"></span>
              {{ button_back }}
            </a>
          </div>
          <div class="pull-right">
            <input type="submit" value="{{ button_submit }}" class="uk-button uk-button-primary" />
          </div>
        </div>
        {% endif %}
      </form>
    </div>

  {% if column_left or column_right %}</div>{% endif %}

  {% if column_right %}
  <div class="uk-width-auto@m">
    {{ column_right }}
  </div>
  {% endif %}

  <!-- grid end -->
  {% if column_left or column_right %}</div>{% endif %}

  {{ content_bottom }}

</div>
</div>

{{ footer }} 
