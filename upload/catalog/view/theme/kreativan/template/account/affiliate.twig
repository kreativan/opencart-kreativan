{{ header }}

<div id="breadcrumb">
  <div class="uk-container">
    <ul class="uk-breadcrumb uk-margin-remove">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>

{% if error_warning %}
  <div class="uk-alert uk-alert-warning uk-margin-remove">
    <div class="uk-container">
      <span uk-icon="icon: warning"></span>
      {{ error_warning }}
    </div>
  </div>
{% endif %}

<div id="main" class="uk-section">
<div class="uk-container">

  {{ content_top }}

  {% if column_left or column_right %}<div class="uk-grid" uk-grid>{% endif %}

  {% if column_left %}
  <div class="uk-width-auto@m">
    {{ column_left }}
  </div>
  {% endif %}

  {% if column_left or column_right %}<div class="uk-width-expand@m">{% endif %}

    <div id="content">

      <h1>{{ heading_title }}</h1>

      <form action="{{ action }}" method="post" enctype="multipart/form-data" class="uk-form-horizontal">
      
        <div class="tm-panel uk-padding uk-margin">
          <h3>{{ text_my_affiliate }}</h3>
          <div class="uk-margin form-group">
            <label class="uk-form-label" for="input-company">{{ entry_company }}</label>
            <div class="uk-form-controls">
              <input type="text" name="company" value="{{ company }}" placeholder="{{ entry_company }}" id="input-company" class="uk-input form-control" />
            </div>
          </div>
          <div class="uk-margin form-group">
            <label class="uk-form-label" for="input-website">{{ entry_website }}</label>
            <div class="uk-form-controls">
              <input type="text" name="website" value="{{ website }}" placeholder="{{ entry_website }}" id="input-website" class="uk-input form-control" />
            </div>
          </div>
        </div>

        <div class="tm-panel uk-padding uk-margin">
          <h3>{{ text_payment }}</h3>
          <div class="uk-margin form-group">
            <label class="uk-form-label" for="input-tax">{{ entry_tax }}</label>
            <div class="uk-form-controls">
              <input type="text" name="tax" value="{{ tax }}" placeholder="{{ entry_tax }}" id="input-tax" class="uk-input form-control" />
            </div>
          </div>
          <div class="uk-margin form-group">
            <label class="uk-form-label">{{ entry_payment }}</label>
            <div class="uk-form-controls">
              <div class="radio">
                <label>{% if payment == 'cheque' %}
                  <input type="radio" class="uk-radio" name="payment" value="cheque" checked="checked" />
                  {% else %}
                  <input type="radio" class="uk-radio" name="payment" value="cheque" />
                  {% endif %}
                  {{ text_cheque }}</label>
              </div>
              <div class="radio">
                <label>{% if payment == 'paypal' %}
                  <input type="radio" class="uk-radio" name="payment" value="paypal" checked="checked" />
                  {% else %}
                  <input type="radio" class="uk-radio" name="payment" value="paypal" />
                  {% endif %}
                  {{ text_paypal }}</label>
              </div>
              <div class="radio">
                <label>{% if payment == 'bank' %}
                  <input type="radio" class="uk-radio" name="payment" value="bank" checked="checked" />
                  {% else %}
                  <input type="radio" class="uk-radio" name="payment" value="bank" />
                  {% endif %}
                  {{ text_bank }}</label>
              </div>
            </div>
          </div>
          <div id="payment-cheque" class="payment">
           <div class="uk-margin form-group required">
            <label class="uk-form-label" for="input-cheque">{{ entry_cheque }}</label>
            <div class="uk-form-controls">
              <input type="text" name="cheque" value="{{ cheque }}" placeholder="{{ entry_cheque }}" id="input-cheque" class="uk-input form-control" />
              {% if error_cheque %}
              <div class="text-danger">{{ error_cheque }}</div>
              {% endif %}
            </div>
           </div>
          </div>
          <div id="payment-paypal" class="payment">
           <div class="uk-margin form-group required">
            <label class="uk-form-label" for="input-paypal">{{ entry_paypal }}</label>
            <div class="uk-form-controls">
              <input type="text" name="paypal" value="{{ paypal }}" placeholder="{{ entry_paypal }}" id="input-paypal" class="uk-input form-control" />
              {% if error_paypal %}
              <div class="text-danger">{{ error_paypal }}</div>
              {% endif %}
            </div>
           </div>
          </div>
          <div class="payment" id="payment-bank">
            <div class="uk-margin form-group">
              <label class="uk-form-label" for="input-bank-name">{{ entry_bank_name }}</label>
              <div class="uk-form-controls">
                <input type="text" name="bank_name" value="{{ bank_name }}" placeholder="{{ entry_bank_name }}" id="input-bank-name" class="uk-input form-control" />
              </div>
            </div>
            <div class="uk-margin form-group">
              <label class="uk-form-label" for="input-bank-branch-number">{{ entry_bank_branch_number }}</label>
              <div class="uk-form-controls">
                <input type="text" name="bank_branch_number" value="{{ bank_branch_number }}" placeholder="{{ entry_bank_branch_number }}" id="input-bank-branch-number" class="uk-input form-control" />
              </div>
            </div>
            <div class="uk-margin form-group">
              <label class="uk-form-label" for="input-bank-swift-code">{{ entry_bank_swift_code }}</label>
              <div class="uk-form-controls">
                <input type="text" name="bank_swift_code" value="{{ bank_swift_code }}" placeholder="{{ entry_bank_swift_code }}" id="input-bank-swift-code" class="uk-input form-control" />
              </div>
            </div>
            <div class="uk-margin form-group required">
              <label class="uk-form-label" for="input-bank-account-name">{{ entry_bank_account_name }}</label>
              <div class="uk-form-controls">
                <input type="text" name="bank_account_name" value="{{ bank_account_name }}" placeholder="{{ entry_bank_account_name }}" id="input-bank-account-name" class="uk-input form-control" />
                {% if error_bank_account_name %}
                <div class="text-danger">{{ error_bank_account_name }}</div>
                {% endif %}
              </div>
            </div>
            <div class="uk-margin form-group required">
              <label class="uk-form-label" for="input-bank-account-number">{{ entry_bank_account_number }}</label>
              <div class="uk-form-controls">
                <input type="text" name="bank_account_number" value="{{ bank_account_number }}" placeholder="{{ entry_bank_account_number }}" id="input-bank-account-number" class="uk-input form-control" />
                {% if error_bank_account_number %}
                <div class="text-danger">{{ error_bank_account_number }}</div>
                {% endif %}
              </div>
            </div>
          </div>
          {% for custom_field in custom_fields %}
          {% if custom_field.location == 'affiliate' %}
          {% if custom_field.type == 'select' %}
          <div class="uk-margin form-group{% if custom_field.required %} required {% endif %} custom-field" data-sort="{{ custom_field.sort_order }}">
            <label class="uk-form-label" for="input-custom-field{{ custom_field.custom_field_id }}">{{ custom_field.name }}</label>
            <div class="uk-form-controls">
              <select name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" id="input-custom-field{{ custom_field.custom_field_id }}" class="uk-select form-control">
