{{ header }}

<div id="breadcrumb">
  <div class="uk-container">
    <ul class="uk-breadcrumb uk-margin-remove">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>

{% if error_warning %}
  <div class="uk-alert uk-alert-danger uk-margin-remove">
    <div class="uk-container">
      <span uk-icon="icon: warning"></span>
      {{ error_warning }}
    </div>
  </div>
{% endif %}

<div id="main" class="uk-section">
<div class="uk-container">

  {{ content_top }}

  {% if column_left or column_right %}<div class="uk-grid" uk-grid>{% endif %}

  {% if column_left %}
  <div class="uk-width-auto@m">
    {{ column_left }}
  </div>
  {% endif %}

  {% if column_left or column_right %}<div class="uk-width-expand@m">{% endif %}

    <div id="content">

      <h1>{{ heading_title }}</h1>

      <p>{{ text_email }}</p>

      <form action="{{ action }}" method="post" enctype="multipart/form-data" class="uk-form-stacked">
        <div class="tm-panel uk-padding">
          <div class="form-group required">
            <label class="uk-form-label" for="input-email">{{ entry_email }}</label>
            <div class="uk-form-constrols">
              <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="uk-input" />
            </div>
          </div>
        </div>
        <div class="uk-margin uk-flex uk-flex-between">
          <div class="pull-left">
            <a href="{{ back }}" class="uk-button uk-button-default">
              <span uk-icon="icon: arrow-left"></span>
              {{ button_back }}
            </a>
          </div>
          <div class="pull-right">
            <input type="submit" value="{{ button_continue }}" class="uk-button uk-button-primary" />
          </div>
        </div>
      </form>

    </div>

  {% if column_left or column_right %}</div>{% endif %}

  {% if column_right %}
  <div class="uk-width-auto@m">
    {{ column_right }}
  </div>
  {% endif %}

  <!-- grid end -->
  {% if column_left or column_right %}</div>{% endif %}

  {{ content_bottom }}
    
</div>
</div>
{{ footer }}