{{ header }}

<div id="breadcrumb">
  <div class="uk-container">
    <ul class="uk-breadcrumb uk-margin-remove">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>

{% if error_warning %}
  <div class="uk-alert uk-alert-warning uk-margin-remove">
    <div class="uk-container">
      <span uk-icon="icon: warning"></span>
      {{ error_warning }}
    </div>
  </div>
{% endif %}

<div id="main" class="uk-section">
<div class="uk-container">

  {{ content_top }}

  {% if column_left or column_right %}<div class="uk-grid" uk-grid>{% endif %}

  {% if column_left %}
  <div class="uk-width-auto@m">
    {{ column_left }}
  </div>
  {% endif %}

  {% if column_left or column_right %}<div class="uk-width-expand@m">{% endif %}

    <div id="content">

      <h1>{{ heading_title }}</h1>

      <p>{{ text_description }}</p>
      
      <form action="{{ action }}" method="post" enctype="multipart/form-data" class="uk-form-horizontal">
        <div class="tm-panel uk-padding">
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label" for="input-to-name">{{ entry_to_name }}</label>
            <div class="uk-form-controls">
              <input type="text" name="to_name" value="{{ to_name }}" id="input-to-name" class="uk-input form-control" />
              {% if error_to_name %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_to_name }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label" for="input-to-email">{{ entry_to_email }}</label>
            <div class="uk-form-controls">
              <input type="text" name="to_email" value="{{ to_email }}" id="input-to-email" class="uk-input form-control" />
              {% if error_to_email %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_to_email }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label" for="input-from-name">{{ entry_from_name }}</label>
            <div class="uk-form-controls">
              <input type="text" name="from_name" value="{{ from_name }}" id="input-from-name" class="uk-input form-control" />
              {% if error_from_name %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_from_name }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label" for="input-from-email">{{ entry_from_email }}</label>
            <div class="uk-form-controls">
              <input type="text" name="from_email" value="{{ from_email }}" id="input-from-email" class="uk-input form-control" />
              {% if error_from_email %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_from_email }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group uk-margin required">
            <label class="uk-form-label control-label">{{ entry_theme }}</label>
            <div class="uk-form-controls">
            {% for voucher_theme in voucher_themes %}
              {% if voucher_theme.voucher_theme_id == voucher_theme_id %}
              <div class="radio">
                <label>
                  <input type="radio" class="uk-radio" name="voucher_theme_id" value="{{ voucher_theme.voucher_theme_id }}" checked="checked" />
                  {{ voucher_theme.name }}</label>
              </div>
              {% else %}
              <div class="radio">
                <label>
                  <input type="radio" class="uk-radio" name="voucher_theme_id" value="{{ voucher_theme.voucher_theme_id }}" />
                  {{ voucher_theme.name }}</label>
              </div>
              {% endif %}
              {% endfor %}
              {% if error_theme %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_theme }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group uk-margin">
            <label class="uk-form-label control-label" for="input-message"><span data-toggle="tooltip" title="{{ help_message }}">{{ entry_message }}</span></label>
            <div class="uk-form-controls">
              <textarea name="message" cols="40" rows="5" id="input-message" class="uk-textarea form-control">{{ message }}</textarea>
            </div>
          </div>
          <div class="form-group uk-margin">
            <label class="uk-form-label control-label" for="input-amount"><span data-toggle="tooltip" title="{{ help_amount }}">{{ entry_amount }}</span></label>
            <div class="uk-form-controls">
              <input type="text" name="amount" value="{{ amount }}" id="input-amount" class="uk-input form-control" size="5" />
              {% if error_amount %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_amount }}</div>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="buttons uk-margin-top">
         <div class="uk-text-right">
          {{ text_agree }}
          {% if agree %}
          <input type="checkbox" class="uk-checkbox" name="agree" value="1" checked="checked" />
          {% else %}
          <input type="checkbox" class="uk-checkbox" name="agree" value="1" />
          {% endif %}
         </div>
          <div class="uk-margin-top uk-text-right">
            <input type="submit" value="{{ button_continue }}" class="uk-button uk-button-primary" />
          </div>
        </div>
      </form>

    </div>

  {% if column_left or column_right %}</div>{% endif %}

  {% if column_right %}
  <div class="uk-width-auto@m">
    {{ column_right }}
  </div>
  {% endif %}

  <!-- grid end -->
  {% if column_left or column_right %}</div>{% endif %}

  {{ content_bottom }}

</div>
</div>
{{ footer }}