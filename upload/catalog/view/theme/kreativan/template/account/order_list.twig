{{ header }}

<div id="breadcrumb">
  <div class="uk-container">
    <ul class="uk-breadcrumb uk-margin-remove">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>

<div id="main" class="uk-section">
<div class="uk-container">

  {{ content_top }}

  {% if column_left or column_right %}<div class="uk-grid" uk-grid>{% endif %}

  {% if column_left %}
  <div class="uk-width-auto@m">
    {{ column_left }}
  </div>
  {% endif %}

  {% if column_left or column_right %}<div class="uk-width-expand@m">{% endif %}
  
    <div id="content">

      <h1>{{ heading_title }}</h1>

      {% if orders %}
      <div class="uk-overlow-auto">
        <table class="uk-table uk-table-striped uk-table-middle uk-table-small">
          <thead>
            <tr>
              <th>{{ column_order_id }}</th>
              <th>{{ column_customer }}</th>
              <th class="uk-text-center">{{ column_product }}</th>
              <th>{{ column_status }}</th>
              <th class="uk-text-right">{{ column_total }}</th>
              <th class="uk-text-left">{{ column_date_added }}</th>
              <th class="uk-text-right">{{ button_view }}</th>
            </tr>
          </thead>
          <tbody>
           {% for order in orders %}
            <tr>
              <td>#{{ order.order_id }}</td>
              <td>{{ order.name }}</td>
              <td class="uk-text-center">{{ order.products }}</td>
              <td>{{ order.status }}</td>
              <td class="uk-text-right">{{ order.total }}</td>
              <td class="uk-text-left">{{ order.date_added }}</td>
              <td class="uk-text-right">
                <a href="{{ order.view }}" title="{{ button_view }}" class="uk-icon-button uk-icon uk-text-primary" uk-icon="info"></a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      <div class="uk-flex uk-flex-between">
        <div>{{ pagination }}</div>
        <div class="uk-text-small uk-text-muted">{{ results }}</div>
      </div>
      {% else %}
      <p class="empty-mesage">{{ text_empty }}</p>
      {% endif %}
    </div>

  {% if column_left or column_right %}</div>{% endif %}

  {% if column_right %}
  <div class="uk-width-auto@m">
    {{ column_right }}
  </div>
  {% endif %}

  <!-- grid end -->
  {% if column_left or column_right %}</div>{% endif %}

  {{ content_bottom }}

</div>
</div>
{{ footer }}
