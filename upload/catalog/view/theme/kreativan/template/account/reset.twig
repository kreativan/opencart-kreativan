{{ header }}

<div id="breadcrumb">
  <div class="uk-container">
    <ul class="uk-breadcrumb uk-margin-remove">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>

<div id="main" class="uk-section">
<div class="uk-container">

  {{ content_top }}

  {% if column_left or column_right %}<div class="uk-grid" uk-grid>{% endif %}

  {% if column_left %}
  <div class="uk-width-auto@m">
    {{ column_left }}
  </div>
  {% endif %}

  {% if column_left or column_right %}<div class="uk-width-expand@m">{% endif %}

    <div id="content">
      <h1>{{ heading_title }}</h1>
      <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
        <div class="tm-panel uk-padding">
          <h3>{{ text_password }}</h3>
          <div class="uk-margin form-group">
            <label class="uk-form-label control-label" for="input-password">{{ entry_password }}</label>
            <div class="uk-form-controls">
              <input type="password" name="password" value="{{ password }}" id="input-password" class="uk-input" />
              {% if error_password %}
              <div class="text-danger">{{ error_password }}</div>
              {% endif %} </div>
          </div>
          <div class="uk-margin form-group">
            <label class="uk-form-label control-label" for="input-confirm">{{ entry_confirm }}</label>
            <div class="uk-form-controls">
              <input type="password" name="confirm" value="{{ confirm }}" id="input-confirm" class="uk-input" />
              {% if error_confirm %}
              <div class="text-danger">{{ error_confirm }}</div>
              {% endif %}</div>
          </div>
        </div>
        <div class="buttons uk-margin-top">
          <div class="pull-left">
            <a href="{{ back }}" class="uk-button uk-button-default">
              <span uk-icon="icon: arrow-left"></span>
              {{ button_back }}
            </a>
          </div>
          <div class="pull-right">
            <button type="submit" class="uk-button uk-button-primary">{{ button_continue }}</button>
          </div>
        </div>
      </form>
    </div>

  {% if column_left or column_right %}</div>{% endif %}

  {% if column_right %}
  <div class="uk-width-auto@m">
    {{ column_right }}
  </div>
  {% endif %}

  <!-- grid end -->
  {% if column_left or column_right %}</div>{% endif %}

  {{ content_bottom }}

</div>
</div>
{{ footer }}