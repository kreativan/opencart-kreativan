{{ header }}

<div id="breadcrumb">
  <div class="uk-container">
    <ul class="uk-breadcrumb uk-margin-remove">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>

{% if success %}
  <div class="uk-alert uk-alert-success uk-margin-remove">
    <div class="uk-container">
      <span uk-icon="icon: check"></span>
      {{ success }}
    </div>
  </div>
{% endif %}

<div id="main" class="uk-section">
<div class="uk-container">

  {{ content_top }}

  {% if column_left or column_right %}<div class="uk-grid" uk-grid>{% endif %}

  {% if column_left %}
  <div class="uk-width-auto@m">
    {{ column_left }}
  </div>
  {% endif %}

  {% if column_left or column_right %}<div class="uk-width-expand@m">{% endif %}
  
    <div id="content">

      <div class="uk-margin">
        <h2>{{ text_my_account }}</h2>
        <ul class="uk-list uk-list-divider uk-margin-remove tm-border uk-padding-small">
          <li><a href="{{ edit }}">{{ text_edit }}</a></li>
          <li><a href="{{ password }}">{{ text_password }}</a></li>
          <li><a href="{{ address }}">{{ text_address }}</a></li>
          <li><a href="{{ wishlist }}">{{ text_wishlist }}</a></li>
        </ul>
      </div>

      {% if credit_cards %}
      <div class="uk-margin">
        <h2>{{ text_credit_card }}</h2>
        <ul class="uk-list uk-list-divider uk-margin-remove tm-border uk-padding-small">
          {% for credit_card in credit_cards %}
          <li><a href="{{ credit_card.href }}">{{ credit_card.name }}</a></li>
          {% endfor %}
        </ul>
      </div>
      {% endif %}

      <div class="uk-margin">
        <h2>{{ text_my_orders }}</h2>
        <ul class="uk-list uk-list-divider uk-margin-remove tm-border uk-padding-small">
          <li><a href="{{ order }}">{{ text_order }}</a></li>
          <li><a href="{{ download }}">{{ text_download }}</a></li>
          {% if reward %}
            <li><a href="{{ reward }}">{{ text_reward }}</a></li>
          {% endif %}
          <li><a href="{{ return }}">{{ text_return }}</a></li>
          <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
          <li><a href="{{ recurring }}">{{ text_recurring }}</a></li>
        </ul>
      </div>

      <div class="uk-margin">
        <h2>{{ text_my_affiliate }}</h2>
        <ul class="uk-list uk-list-divider uk-margin-remove tm-border uk-padding-small">
          {% if not tracking %}
          <li><a href="{{ affiliate }}">{{ text_affiliate_add }}</a></li>
          {% else %}
          <li><a href="{{ affiliate }}">{{ text_affiliate_edit }}</a></li>
          <li><a href="{{ tracking }}">{{ text_tracking }}</a></li>
          {% endif %}
        </ul>
      </div>

      <div class="uk-margin">
        <h2>{{ text_my_newsletter }}</h2>
        <ul class="uk-list uk-list-divider uk-margin-remove tm-border uk-padding-small">
          <li><a href="{{ newsletter }}">{{ text_newsletter }}</a></li>
        </ul>
      </div>

    </div>

  {% if column_left or column_right %}</div>{% endif %}

  {% if column_right %}
  <div class="uk-width-auto@m">
    {{ column_right }}
  </div>
  {% endif %}

  <!-- grid end -->
  {% if column_left or column_right %}</div>{% endif %}

  {{ content_bottom }}

</div>
</div>
{{ footer }}