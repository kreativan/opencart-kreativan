<script src="//www.google.com/recaptcha/api.js" type="text/javascript"></script>
<div>
  <!--
  <legend>{{ text_captcha }}</legend>
  -->
  <div class="form-group required">{% if route|slice(0, 9) == 'checkout/' %}
    <label class="uk-form-label control-label" for="input-payment-captcha">{{ entry_captcha }}</label>
    <div id="input-payment-captcha" class="g-recaptcha" data-sitekey="{{ site_key }}"></div>
    {% if error_captcha %}
    <div class="text-danger uk-text-danger uk-text-small">{{ error_captcha }}</div>
    {% endif %}
    {% else %}
    <label class="uk-form-label control-label">{{ entry_captcha }}</label>
    <div class="uk-form-controls">
      <div class="g-recaptcha" data-sitekey="{{ site_key }}"></div>
      {% if error_captcha %}
      <div class="text-danger uk-text-danger uk-text-small">{{ error_captcha }}</div>
      {% endif %}
    </div>
    {% endif %}
  </div>
</div>
