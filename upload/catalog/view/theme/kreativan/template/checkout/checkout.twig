{{ header }}

<div id="breadcrumb">
  <div class="uk-container">
    <ul class="uk-breadcrumb uk-margin-remove">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>

{% if error_warning %}
<div class="uk-alert uk-alert-warning uk-margin-remove" uk-alert>
  <div class="uk-container">
    <span uk-icon="icon: warning"></span>
    {{ error_warning }}
  </div>
  <a class="uk-alert-close uk-close" uk-close></a>
</div>
{% endif %}

<div id="main" class="uk-section">
<div class="uk-container">

  {{ content_top }}

  {% if column_left or column_right %}<div class="uk-grid uk-grid-divider" uk-grid>{% endif %}

  {% if column_left %}
  <div class="uk-width-auto@m uk-visible@l">
    {{ column_left }}
  </div>
  {% endif %}

  {% if column_left or column_right %}<div class="uk-width-expand@m">{% endif %}

    <div id="content" class="{{ class }}">{{ content_top }}
      <h1>{{ heading_title }}</h1>
      <div class="panel-group" id="accordion">

        <div class="panel panel-default uk-margin">
          <div class="panel-heading uk-padding-small tm-border uk-position-relative">
            <h4 class="panel-title uk-margin-remove">{{ text_checkout_option }}</h4>
            {% if logged %}
            <span class="uk-position-center-right uk-margin-right uk-text-primary" uk-icon="icon: check"></span>
            {% endif %}
          </div>
          <div class="panel-collapse collapse" id="collapse-checkout-option">
            <div class="panel-body uk-margin-top"></div>
          </div>
        </div>

        {% if not logged and account != 'guest' %}
        <div class="panel panel-default uk-margin">
          <div class="panel-heading uk-padding-small tm-border uk-position-relative">
            <h4 class="panel-title uk-margin-remove">{{ text_checkout_account }}</h4>
          </div>
          <div class="panel-collapse collapse" id="collapse-payment-address">
            <div class="panel-body uk-margin-top"></div>
          </div>
        </div>
        {% else %}
        <div class="panel panel-default uk-margin">
          <div class="panel-heading uk-padding-small tm-border uk-position-relative">
            <h4 class="panel-title uk-margin-remove">{{ text_checkout_payment_address }}</h4>
          </div>
          <div class="panel-collapse collapse" id="collapse-payment-address">
            <div class="panel-body uk-margin-top"></div>
          </div>
        </div>
        {% endif %}

        {% if shipping_required %}
        <div class="panel panel-default uk-margin">
          <div class="panel-heading uk-padding-small tm-border uk-position-relative">
            <h4 class="panel-title uk-margin-remove">{{ text_checkout_shipping_address }}</h4>
          </div>
          <div class="panel-collapse collapse" id="collapse-shipping-address">
            <div class="panel-body uk-margin-top"></div>
          </div>
        </div>
        <div class="panel panel-default uk-margin">
          <div class="panel-heading uk-padding-small tm-border uk-position-relative">
            <h4 class="panel-title uk-margin-remove">{{ text_checkout_shipping_method }}</h4>
          </div>
          <div class="panel-collapse collapse" id="collapse-shipping-method">
            <div class="panel-body uk-margin-top"></div>
          </div>
        </div>
        {% endif %}

        <div class="panel panel-default uk-margin">
          <div class="panel-heading uk-padding-small tm-border uk-position-relative">
            <h4 class="panel-title uk-margin-remove">{{ text_checkout_payment_method }}</h4>
          </div>
          <div class="panel-collapse collapse" id="collapse-payment-method">
            <div class="panel-body uk-margin-top"></div>
          </div>
        </div>

        <div class="panel panel-default uk-margin">
          <div class="panel-heading uk-padding-small tm-border uk-position-relative">
            <h4 class="panel-title uk-margin-remove">{{ text_checkout_confirm }}</h4>
          </div>
          <div class="panel-collapse collapse" id="collapse-checkout-confirm">
            <div class="panel-body uk-margin-top"></div>
          </div>
        </div>

      </div>
    </div>

  {% if column_left or column_right %}</div>{% endif %}

  {% if column_right %}
  <div class="uk-width-auto@m uk-visible@l">
    {{ column_right }}
  </div>
  {% endif %}

  <!-- grid end -->
  {% if column_left or column_right %}</div>{% endif %}

  {{ content_bottom }}

</div>
</div>

