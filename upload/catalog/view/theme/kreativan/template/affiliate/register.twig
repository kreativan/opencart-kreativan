				success: function(json) {
					$(node).parent().find('.text-danger uk-text-danger uk-text-small').remove();

					if (json['error']) {
						$(node).parent().find('input').after('<div class="text-danger uk-text-danger uk-text-small">' + json['error'] + '</div>');
