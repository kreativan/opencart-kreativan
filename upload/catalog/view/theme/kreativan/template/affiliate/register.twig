            <label class="uk-form-label control-label uk-width-1-3@m" for="input-custom-field{{ custom_field.custom_field_id }}">{{ custom_field.name }}</label>
            <div class="uk-width-expand@m">
              <div class="input-group time uk-position-relative">
                <input type="text" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{% if register_custom_field[custom_field.custom_field_id] %}{{ register_custom_field[custom_field.custom_field_id] }}{% else %}{{ custom_field.value }}{% endif %}" placeholder="{{ custom_field.name }}"  id="input-custom-field{{ custom_field.custom_field_id }}" class="uk-input timePicker" />
                <span class="uk-form-icon uk-form-icon-flip" href="" uk-icon="icon: clock"></span>
              </div>
              {% if error_custom_field[custom_field.custom_field_id] %}
              <div class="text-danger uk-text-danger uk-text-small">{{ error_custom_field[custom_field.custom_field_id] }}</div>
              {% endif %} </div>
          </div>
          {% endif %}
          {% if custom_field.type == 'datetime' %}
          <div id="custom-field{{ custom_field.custom_field_id }}" class="form-group uk-grid custom-field" data-sort="{{ custom_field.sort_order }}">
            <label class="uk-form-label control-label uk-width-1-3@m" for="input-custom-field{{ custom_field.custom_field_id }}">{{ custom_field.name }}</label>
            <div class="uk-width-expand@m">
              <div class="input-group datetime uk-position-relative">
                <input type="text" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{% if register_custom_field[custom_field.custom_field_id] %}{{ register_custom_field[custom_field.custom_field_id] }}{% else %}{{ custom_field.value }}{% endif %}" placeholder="{{ custom_field.name }}"  id="input-custom-field{{ custom_field.custom_field_id }}" class="uk-input dateTimePicker" />
