{% if show_popup %}
<div id="modal-popup" class="uk-flex-top" uk-modal="bg-close: false">
  <div class="uk-modal-dialog uk-margin-auto-vertical">

    <div class="uk-grid uk-grid-collapse uk-flex-middle uk-grid-match" uk-grid>

      <div class="uk-width-expand@m">
        <picture class="uk-display-block uk-padding-small">
          <img src="{{ image }}" alt="{{ title }}" class="uk-width-1-1" />
        </picture>
      </div>

      <div class="uk-width-expand@m">
        <div class="uk-modal-body">

          <h2>{{ title }}</h3>

          {{ description }}

          {% if social_links|length %}
          <div class="uk-margin">
            {% for key, link in social_links %}
              <a href="{{ link }}" 
                class="uk-icon uk-icon-button uk-margin-small-right" 
                target="_blank"
                rel="nofollow"
                uk-icon="icon:{{ key }}; ratio: 0.9">
              </a>
            {% endfor %}
          </div>
          {% endif %}

          <button type="button" class="uk-modal-close uk-icon-button uk-position-top-right uk-position-small" 
            onclick="closePopup()" uk-close="ratio:1.3">
          </button>
        </div>
      </div>

    </div>

  </div>
</div>
{% endif %}